# Calculadora em Python

#imprimir python calculator na tela
print ("\nCalculadora Python")

#definindo a função soma
def addNum(x, y):
    return x + y

#definindo a função subtração
def subNum(x, y):
    return x - y

#definindo a função multiplicação
def multNum(x, y):
    return x * y

#definindo a função divisão
def divNum(x, y):
    return x / y

#imprimindo as informações da opção que deseja
print("\nSelecione o número da operação desejada: \n")
print("1 - Soma")
print("2 - Subtração")
print("3 - Multiplicação")
print("4 - Divisão")

#solicitando o input da opção solicitada
opcao = input('\nDigite sua opção (1/2/3/4): ')

#solicitando o input dos números
x = float(input('\nDigite o primeiro número: '))
y = float(input('\nDigite o segundo número: '))

#se a opção for 1, executar a função def de soma
if opcao == '1':
    print("\n")
    print(x, "+", y, "=", addNum(x, y))
    print("\n")

#se a opção for 2, executar a função def de subtração    
elif opcao == '2':
    print("\n")
    print(x, "-", y, "=", subNum(x, y))
    print("\n")

#se a opção for 3, executar a função def de multiplicação
elif opcao == '3':
    print("\n")
    print(x, "*", y, "=", multNum(x, y))
    print("\n")

#se a opção for 4, executar a função def de divisão
elif opcao == '4':
    print("\n")
    print(x, "/", y, "=", divNum(x, y))
    print("\n")

#se for uma opção que não existe(diferente de 1, 2, 3 ou 4) indica que é uma opção inválida
else:
    print("\nOpção inválida!")
